<% layout('layouts/boilerplate') %>

    <div class="card mx-auto user">
        <img src="https://images.unsplash.com/photo-1518939870591-b7b8d5578557?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80"
            class="card-img-top" alt="...">
        <div class="card-body">
            <h1 class="card-title mb-3">Register</h1>
            <div class="card-text">
                <form action="/register" method="POST" class="validate-form" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username:</label>
                        <input type="text" class="form-control" id="username" name="username" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="text" class="form-control" type="email" id="email" name="email" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" name="password" id="password" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success async-btn">Register</button>
                </form>
            </div>
        </div>
    </div>